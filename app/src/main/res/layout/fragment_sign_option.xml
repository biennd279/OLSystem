<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_sign_no_transparent_v2"
    tools:context=".ui.auth.SignOptionFragment">

    <ImageView
        android:id="@+id/sign_opt_background_transform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white_transform_background"
        android:contentDescription="@string/background_transform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/sign_opt_logo_app"
        android:layout_width="66dp"
        android:layout_height="64dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="104dp"
        android:contentDescription="@string/app_logo"
        android:src="@mipmap/logo_remind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_opt_app_name"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/cambriab"
        android:text="@string/app_name"
        android:textColor="@color/app_name_color"
        android:textSize="40sp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toEndOf="@+id/sign_opt_logo_app"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/cambria"
        android:gravity="center"
        android:paddingTop="0dp"
        android:text="@string/reach_students_and_parents_where_they_are"
        android:textColor="@color/app_name_color"
        android:textSize="32sp"
        android:textStyle="normal|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_opt_app_name" />

    <TextView
        android:id="@+id/sign_in_option"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center_horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="12dp"
        android:text="@string/enter_your_email_or_phone"
        android:textColor="#9A9797"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slogan" />

    <TextView
        android:id="@+id/sign_up_option"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_textview_dark"
        android:gravity="center_horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="12dp"
        android:text="@string/create_new_account"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/sign_opt_textview_or"
        app:layout_constraintStart_toStartOf="@+id/sign_opt_textview_or"
        app:layout_constraintTop_toBottomOf="@+id/sign_opt_textview_or" />

    <TextView
        android:id="@+id/sign_opt_textview_or"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/or"
        android:textColor="@color/app_name_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/sign_in_option"
        app:layout_constraintStart_toStartOf="@+id/sign_in_option"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_option" />

</androidx.constraintlayout.widget.ConstraintLayout>